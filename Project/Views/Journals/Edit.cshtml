@model Project.Models.Journal

@{
    Layout = "~/views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JournalId" />
            <div class="form-group">
                <label asp-for="SymbolName" class="control-label"></label>
                <input asp-for="SymbolName" class="form-control" />
                <span asp-validation-for="SymbolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryPrice" class="control-label"></label>
                <input asp-for="EntryPrice" class="form-control" />
                <span asp-validation-for="EntryPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosePrice" class="control-label"></label>
                <input asp-for="ClosePrice" class="form-control" />
                <span asp-validation-for="ClosePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profit" class="control-label"></label>
                <input asp-for="Profit" class="form-control" />
                <span asp-validation-for="Profit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loss" class="control-label"></label>
                <input asp-for="Loss" class="form-control" />
                <span asp-validation-for="Loss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Journal1" class="control-label"></label>
                <input asp-for="Journal1" class="form-control" />
                <span asp-validation-for="Journal1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
